%h3= "#{t('labels.new')} #{t('activerecord.models.classroom')}"
%p
  = link_to 'Voltar', classrooms_path, class:"btn btn-info"
%p
  = simple_form_for(@classroom) do |f|
    .row
      .col-md-5
        .form-group
          = f.input :course_id, input_html: {class:"form-control"}
      .col-md-5
        .form-group
          = f.input :student_id, input_html: {class:"form-control"}
    %br
    = f.submit t('labels.save'), class: 'btn btn-primary'
